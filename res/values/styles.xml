<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.Mapzen" parent="@android:style/Theme.Holo.Light">
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Mapzen</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:itemTextAppearance">@style/MapzenItemTextAppearance</item>
        <item name="android:actionOverflowButtonStyle">@style/MapzenOverflow</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_back_arrow</item>
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="Theme.Mapzen.SearchResults" parent="Theme.Mapzen">
        <item name="android:actionBarStyle">@style/ActionBar.Solid.Mapzen.SearchResults</item>
        <item name="android:windowActionBarOverlay">false</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>
    </style>

    <style name="Theme.Mapzen.NoActionBar" parent="@android:style/Theme.Holo.Light.NoActionBar.Fullscreen">
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="ActionBar.Solid.Mapzen" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:titleTextStyle">@style/MapzenTitleText</item>
        <item name="android:background">@color/transparent_white</item>
        <item name="android:icon">@drawable/ic_open_icon</item>
    </style>

    <style name="ActionBar.Solid.Mapzen.SearchResults" parent="ActionBar.Solid.Mapzen">
        <item name="android:titleTextStyle">@style/SearchResultsTitleText</item>
    </style>

    <style name="MapzenTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:fontFamily">sans-serif-light-condensed</item>
        <item name="android:paddingLeft">@dimen/routing_footer_left_padding</item>
    </style>

    <style name="SearchResultsTitleText" parent="MapzenTitleText">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="MapzenSearchText" parent="@android:style/TextAppearance.Holo.Widget.EditText">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="MapzenItemTextAppearance" parent="@android:style/TextAppearance.Widget.DropDownItem">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/medium</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="MapzenOverflow" parent="@android:style/Widget.Holo.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_menu_overflow</item>
    </style>

    <style name="LoginTitle" parent="@android:style/Widget.TextView">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginTop">@dimen/login_title_margin_vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/big</item>
        <item name="android:paddingBottom">@dimen/button_above_below_padding</item>
    </style>

    <style name="LoginBody" parent="@android:style/Widget.TextView">
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/login_body_margin_vertical</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:fontFamily">sans-serif-condensed-light</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textColor">@color/sign_up_text</item>
        <item name="android:textSize">@dimen/small_2</item>
    </style>

    <style name="LoginLink" parent="LoginBody">
        <item name="android:textColor">@color/red</item>
        <item name="android:clickable">true</item>
    </style>

</resources>
